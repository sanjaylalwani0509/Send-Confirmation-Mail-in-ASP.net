@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Login</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }

        body {
            min-height: 100vh;
            background: #f5f7fa;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-wrapper {
            background: #ffffff;
            padding: 35px 30px;
            border-radius: 14px;
            box-shadow: 0 8px 24px rgba(0,0,0,0.1);
            width: 100%;
            max-width: 370px;
            text-align: center;
        }

            .login-wrapper h1 {
                font-size: 24px;
                color: #333;
                margin-bottom: 25px;
            }

        .form-error {
            background: #ffe6e6;
            color: #cc0000;
            padding: 10px 15px;
            border-radius: 8px;
            margin-bottom: 20px;
            font-size: 14px;
        }

        .input-group {
            margin-bottom: 20px;
            text-align: left;
        }

            .input-group label {
                font-size: 14px;
                color: #555;
                margin-bottom: 6px;
                display: block;
            }

            .input-group input {
                width: 100%;
                padding: 12px 14px;
                border: 1px solid #ccc;
                border-radius: 8px;
                font-size: 15px;
                transition: border-color 0.3s, box-shadow 0.3s;
            }

                .input-group input:focus {
                    border-color: #3498db;
                    outline: none;
                    box-shadow: 0 0 6px rgba(52, 152, 219, 0.3);
                }

        .toggle-password {
            margin-top: 6px;
            text-align: right;
            font-size: 12px;
            color: #3498db;
            cursor: pointer;
        }

        button {
            width: 100%;
            padding: 12px;
            background: #3498db;
            border: none;
            border-radius: 8px;
            color: #fff;
            font-size: 16px;
            cursor: pointer;
            transition: background 0.3s;
        }

            button:hover {
                background: #2980b9;
            }

        .footer {
            margin-top: 20px;
            font-size: 12px;
            color: #777;
        }

        .register-link {
            margin-top: 15px;
            font-size: 14px;
        }

            .register-link a {
                color: #3498db;
                text-decoration: none;
                font-weight: 500;
            }

                .register-link a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>

    <div class="login-wrapper">
        <h1>Student Login</h1>

        @if (ViewBag.Error != null)
        {
            <div class="form-error">@ViewBag.Error</div>
        }

        <form method="post">
            <div class="input-group">
                <label for="prn">PRN</label>
                <input type="text" id="prn" name="prn" placeholder="Enter your PRN" required />
            </div>

            <div class="input-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" placeholder="Enter your password" required />
                <div class="toggle-password" onclick="togglePassword()">Show Password</div>
            </div>

            <button type="submit">Login</button>
        </form>

        <div class="register-link">
            Don't have an account? <a asp-action="Register">Register here</a>
        </div>

        <div class="footer">
            &copy; 2025 Your College Name
        </div>
    </div>

    <script>
        function togglePassword() {
            const passwordField = document.getElementById('password');
            const toggleText = document.querySelector('.toggle-password');
            if (passwordField.type === 'password') {
                passwordField.type = 'text';
                toggleText.textContent = 'Hide Password';
            } else {
                passwordField.type = 'password';
                toggleText.textContent = 'Show Password';
            }
        }
    </script>

</body>
</html>
