@{
    ViewData["Title"] = "About Us";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>About MSU Baroda</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <style>
        /* Navbar Styling */
        .navbar {
            background: #2c3e50;
            color: white;
            padding: 15px 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        .logo {
            font-size: 22px;
            font-weight: bold;
        }

        .nav-links {
            list-style: none;
            display: flex;
            gap: 30px;
        }

            .nav-links li a {
                text-decoration: none;
                color: white;
                font-size: 16px;
                transition: color 0.3s;
            }

                .nav-links li a:hover {
                    color: #3498db;
                }

        .profile-btn {
            background: #3498db;
            border: none;
            padding: 10px 16px;
            border-radius: 50px;
            color: white;
            font-size: 14px;
            cursor: pointer;
            transition: background 0.3s;
        }

            .profile-btn:hover {
                background: #2980b9;
            }

        body {
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: #f4f6f8;
        }

        /* Page Layout */
        .main-layout {
            display: flex;
            min-height: calc(100vh - 60px);
        }

        /* Sidebar Styling */
        .sidebar {
            width: 220px;
            background-color: #2c3e50;
            padding: 30px 15px;
            color: white;
            flex-shrink: 0;
            display: flex;
            flex-direction: column;
        }

            .sidebar h2 {
                font-size: 18px;
                text-align: center;
                margin-bottom: 30px;
                letter-spacing: 1px;
                color: #ecf0f1;
            }

            .sidebar ul {
                list-style-type: none;
                padding: 0;
                margin: 0;
            }

                .sidebar ul li {
                    border-top: 1px solid rgba(255, 255, 255, 0.1);
                }

                    .sidebar ul li:first-child {
                        border-top: none;
                    }

                    .sidebar ul li a {
                        display: block;
                        padding: 14px 20px;
                        text-decoration: none;
                        color: #ffffff;
                        font-weight: 500;
                        transition: background 0.3s, color 0.3s;
                    }

                        .sidebar ul li a:hover,
                        .sidebar ul li a.active {
                            background-color: #34495e;
                            color: #3498db;
                        }

        .content-area {
            flex-grow: 1;
            padding: 100px 40px 40px 40px;
            background-color: #ffffff;
        }

        img {
            max-width: 100%;
            margin-top: 20px;
            border-radius: 8px;
        }

        .academic-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #dfeff6;
            padding: 15px 25px;
            margin: 10px 0;
            border-radius: 6px;
            font-weight: bold;
            font-size: 18px;
        }

            .academic-item:nth-child(even) {
                background-color: #1c2e47;
                color: white;
            }
    </style>
</head>

<body>

    <!-- Navbar -->
    <div class="navbar">
        <div class="logo">MSU BARODA</div>
        <ul class="nav-links">
            <li><a href="/Account/Dashboard">Home</a></li>
            <li><a href="/Home/About">About Us</a></li>
            <li><a href="/Home/Contact">Contact Us</a></li>
        </ul>
        <button class="profile-btn">My Profile</button>
    </div>

    <!-- Main Layout -->
    <div class="main-layout">
        <!-- Sidebar -->
        <div class="sidebar">
            <h2>ABOUT US</h2>
            <ul>
                <li><a href="#" onclick="showContent('vision'); setActive(this)">VISION</a></li>
                <li><a href="#" onclick="showContent('mission'); setActive(this)">MISSION</a></li>
                <li><a href="#" onclick="showContent('academic'); setActive(this)">ACADEMIC PROFILES</a></li>
                <li><a href="#" onclick="showContent('reach'); setActive(this)">HOW TO REACH MSUB</a></li>
            </ul>
        </div>

        <!-- Content Area -->
        <div id="content" class="content-area"></div>
    </div>

    <!-- Scripts -->
    <script>
        function animateCounter(element, target, showPlus = false) {
            let start = 0;
            const duration = 2000;
            const startTime = performance.now();

            function update(currentTime) {
                const elapsed = currentTime - startTime;
                const progress = Math.min(elapsed / duration, 1);
                const current = Math.floor(progress * target);

                element.textContent = showPlus
                    ? current.toLocaleString() + (progress === 1 ? '+' : '')
                    : current.toLocaleString();

                if (progress < 1) {
                    requestAnimationFrame(update);
                }
            }

            requestAnimationFrame(update);
        }

        function showContent(type) {
            const content = document.getElementById('content');

            if (type === 'vision') {
                content.innerHTML = `
                    <h2>Vision of The Maharaja Sayajirao University of Baroda:</h2>
                    <p>“The Progress of a nation requires that its people should be educated..."</p>
                    <p style="text-align:right; color:#2980b9;"><strong>- Shrimant Maharaja Sayajirao Gaekwad-III</strong></p>
                    <img src="/images/gaekwad.png" alt="Shrimant Maharaja Sayajirao Gaekwad-III" />
                `;
            } else if (type === 'mission') {
                content.innerHTML = `
                    <h2>Mission of The Maharaja Sayajirao University of Baroda:</h2>
                    <ul>
                        <li>Sustain an environment of academic excellence and innovative research...</li><br><br>
                        <li>Striving to create an equitable and gender just society...</li><br><br>
                        <li>To inculcate highest human values...</li><br><br>
                        <li>Promoting and enhancing high standards...</li><br><br>
                        <li>Providing a learning environment that nurtures critical reflections...</li><br><br>
                        <li>Increasing access to education by all sections of the society.</li><br><br>
                        <li>Relating knowledge to contemporary needs and moral concerns.</li><br><br>
                        <li>Building mutually enriching linkages with the society and its institutions.</li><br><br>
                    </ul>
                `;
            } else if (type === 'academic') {
                content.innerHTML = `
                    <h2>Academic Profile:</h2>
                    <div class="academic-item">Number of Faculties <span class="counter" data-target="14"></span></div>
                    <div class="academic-item">Number of Colleges <span class="counter" data-target="3"></span></div>
                    <div class="academic-item">Number of Institutes <span class="counter" data-target="9"></span></div>
                    <div class="academic-item">Number of Schools <span class="counter" data-target="2"></span></div>
                    <div class="academic-item">Number of Departments <span class="counter" data-target="111"></span></div>
                    <div class="academic-item">Number of Undergraduate Academic Programmes <span class="counter" data-target="88"></span></div>
                    <div class="academic-item">Number of Postgraduate Programmes <span class="counter" data-target="121"></span></div>
                    <div class="academic-item">Ph.D. Programmes <span class="counter" data-target="68"></span></div>
                    <div class="academic-item">PG Diploma Programmes <span class="counter" data-target="34"></span></div>
                    <div class="academic-item">Enrolled Students <span class="counter plus" data-target="47000"></span></div>
                    <div class="academic-item">Registered Ph.D. Scholars <span class="counter plus" data-target="1100"></span></div>
                `;

                setTimeout(() => {
                    document.querySelectorAll('.counter').forEach(counter => {
                        const target = parseInt(counter.getAttribute('data-target'));
                        const showPlus = counter.classList.contains('plus');
                        animateCounter(counter, target, showPlus);
                    });
                }, 300);
            } else if (type === 'reach') {
                content.innerHTML = `
                    <h2>How to Reach MSUB</h2>
                    <p>The university is located in Vadodara, Gujarat. It is well connected by road, rail, and air.</p>
                    <p>The Vadodara railway station and airport are within a short distance from the university.</p>
                    <p><strong>Address:</strong> The Maharaja Sayajirao University of Baroda, Vadodara, Gujarat, India.</p>
                    <div style="margin-top: 20px;">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3690.770187330787!2d73.17917857463726!3d22.324529542018002!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x395fc8cad5ef7941%3A0x5a613ac68ff3166a!2sThe%20Maharaja%20Sayajirao%20University%20of%20Baroda!5e0!3m2!1sen!2sin!4v1744100278135!5m2!1sen!2sin"
                            width="100%" height="400" style="border:0; border-radius: 10px;" allowfullscreen="" loading="lazy"
                            referrerpolicy="no-referrer-when-downgrade">
                        </iframe>
                    </div>
                `;
            }
        }

        function setActive(element) {
            document.querySelectorAll('.sidebar a').forEach(a => a.classList.remove('active'));
            element.classList.add('active');
        }

        document.addEventListener('DOMContentLoaded', function () {
            const firstLink = document.querySelector('.sidebar ul li a');
            firstLink.classList.add('active');
            showContent('vision');
        });
    </script>
</body>
</html>
